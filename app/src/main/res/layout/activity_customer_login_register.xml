<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".CustomerLoginRegisterActivity">

    <TextView
        android:id="@+id/customerLoginText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="220dp"
        android:text="Customer's login"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginBtnCustomer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/passwordCustomer"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/passwordCustomer"
        app:layout_constraintTop_toBottomOf="@+id/passwordCustomer" />

    <EditText
        android:id="@+id/emailCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/customerLoginText"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/customerLoginText"
        app:layout_constraintTop_toTopOf="@+id/customerLoginText" />

    <EditText
        android:id="@+id/passwordCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/emailCustomer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailCustomer"
        app:layout_constraintTop_toTopOf="@+id/emailCustomer" />

    <TextView
        android:id="@+id/frgtpswdCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Forgot Password?"
        app:layout_constraintEnd_toEndOf="@+id/loginBtnCustomer"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="@+id/loginBtnCustomer"
        app:layout_constraintTop_toTopOf="@+id/loginBtnCustomer" />

    <Button
        android:id="@+id/registerBtnCustomer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/loginBtnCustomer"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/loginBtnCustomer"
        app:layout_constraintTop_toTopOf="@+id/frgtpswdCustomer" />

</androidx.constraintlayout.widget.ConstraintLayout>